<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.QuizApp" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!--Color-->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/blue_500</item>
        <item name="colorPrimaryContainer">@color/blue_500</item>
        <item name="colorOnPrimaryContainer">#1D4583</item>

        <item name="android:statusBarColor">@color/purpleVariant</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_50</item>
        <item name="colorOnPrimaryContainer">@color/blue_black_3_3</item>

        <item name="android:statusBarColor">@color/purpleVariant</item>
    </style>

    <style name="SignUpTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purpleVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_50</item>
        <item name="colorOnPrimaryContainer">@color/blue_black_3_3</item>

        <item name="android:statusBarColor">@color/purpleVariant</item>
    </style>

    <style name="ResultTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purpleVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_50</item>
        <item name="colorOnPrimaryContainer">@color/blue_black_3_3</item>

        <item name="android:statusBarColor">@color/purpleVariant</item>
    </style>

    <style name="Theme.QuizApp" parent="Base.Theme.QuizApp" />
</resources>